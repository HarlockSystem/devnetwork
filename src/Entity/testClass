class Post
{
    protected $pdo;

    public function __construct(PDO $pdo)
    {
        $this->userManager = $userManager;
    }

    /.../

    public function getUser()
    {
        $usrMng = new UserManager($pdo);
        return usrMng->findById($this->UserId);
    }